{
  "openapi": "3.0.0",
  "info": {
    "title": "Heure UTC API",
    "version": "1.0.0",
    "description": "Expose l'heure UTC actuelle via worldtimeapi.org"
  },
  "servers": [
    {
      "url": "https://ntp-api-vercel.vercel.app"
    }
  ],
  "paths": {
    "/api/current-time": {
      "get": {
        "operationId": "getCurrentTime",
        "summary": "Heure UTC",
        "responses": {
          "200": {
            "description": "Heure actuelle UTC",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "utc_datetime": {
                      "type": "string",
                      "example": "2025-03-27T21:00:00Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
